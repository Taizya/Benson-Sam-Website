---
import '../styles/home.css';
import NavBar from "../components/NavBar.astro";
import HeroContent from "../components/HeroContent.astro";

interface Props {
  title?: string;
  text?: string;
  image?: string;
}

const { title, text, image } = Astro.props;
---

<section class="hero-section" style={`background-image: url(${image})`}>
   <div class="hero-overlay"></div>
   <div class="hero-content">
      <NavBar />
      <HeroContent title={title} text={text}/>
   </div>
</section>

<style>
    .hero-section {
        background-size: cover;
        background-position: center;
        height: 45.75em;
        position: relative;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.73);
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }
</style>
