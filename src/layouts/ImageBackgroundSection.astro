---
import Overlay from '../components/Overlay.astro';

interface Props {
  image: string;
  customClass?: string;
}

const { image, customClass } = Astro.props;
---

<section class:list={["image-background", customClass]}>
  <Overlay />
  <div class="content-wrapper">
    <slot />
  </div>
</section>

<style define:vars={{ image: `url(/assets/images/${image})` }}>
  .image-background {
    background-image: var(--image);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    min-height: 115vh;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--primary-gold);
    text-align: center;
    position: relative;
  }

  .content-wrapper {
    position: relative;
    z-index: 1;
    color: var(--primary-gold);
  }

  .content-wrapper :global(h2) {
    font-size: var(--font-size-h2);
    font-weight: var(--font-weight-h2);
    color: var(--primary-gold);
  }

  .content-wrapper :global(.reasons) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.0375em;
  }

  .content-wrapper :global(.reason) {
    text-align: left;
  }

  .content-wrapper :global(.reason h4) {
    font-family: "Crimson Text", serif;
    font-weight: 550;
    font-size: var(--font-size-h3);
    line-height: 1.3;
    margin-bottom: calc(var(--spacing-xs) * 0.75);
    text-align: left;
    color: var(--primary-gold);
  }

  .content-wrapper :global(.reason p) {
    font-size: var(--font-size-p);
    text-align: left;
    color: var(--primary-gold);
  }
</style>
