---
interface Props {
	name: string;
	position: string;
	image?: string;
}

const { name, position, image } = Astro.props;
---

<div class="card">
	{image && <img src={image} alt={name} class="member-image" />}
   <div class="gold-overlay">
      <div class="card-content">
         <p class="name">{name}</p>
         <p class="position">{position}</p>
      </div>
   </div>
</div>

<style>
	.card {
		width: 13.77em;
		height: 22.66em;
		border-radius: 0.75em;
		color: #000000;
		position: relative;
		z-index: 0;
	}
   .gold-overlay{
		width: 13.77em;
		height: 22.66em;
		position: absolute;
		background: linear-gradient(to top, #d2ac67 20%, rgba(210, 172, 103, 0) 45%);
		border-radius: 0.75em;
		z-index: 1;
   }

	.member-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 0.625em;
		position: absolute;
		top: 0;
		left: 0;
		z-index: -1;
	}

	.card-content {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		padding: 1.5rem;
		border-bottom-left-radius: 0.625em;
		border-bottom-right-radius: 0.625em;
	}

	.name {
		font-family: "Crimson Text", serif;
		font-weight: 400;
		line-height: 1.3;
	}

	.position {
		font-family: "Inter", sans-serif;
		font-weight: 400;
		line-height: 1.2;
	}
</style>
