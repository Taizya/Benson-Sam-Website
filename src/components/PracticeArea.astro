---
interface Props {
	image: string;
	title: string;
}

const { image, title } = Astro.props;
---

<div class="practice-area-card">
	<img src={image} alt={title} />
	<span>{title}</span>
</div>

<style>
	.practice-area-card {
		background-color: #fff;
		border-radius: 10px;
		box-shadow: 0px 8px 6px 2px rgba(0, 0, 0, 0.25);
		width: 316px;
		height: 324px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.practice-area-card img {
		width: 142px;
		height: 156px;
	}

	.practice-area-card span {
		font-family: "Roboto", sans-serif;
		font-weight: 400;
		font-size: 28px;
		line-height: 1.17;
		text-align: center;
		color: 000;
		margin-top: 1rem;
		width: 6em;
	}
</style>