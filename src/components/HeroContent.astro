---
interface Props {
  title?: string;
  text?: string;
}

const { 
  title,
  text
} = Astro.props;
---

<div class="hero-text-content">
   <h1 class="hero-heading">{title}</h1>
   <p class="hero-subtext">{text}</p>
</div>

<style>
    .hero-text-content {
        position: relative;
        top: 5.5rem;
        color: #D2AC67;
        max-width: 60.25em;
        word-wrap: break-word;
        overflow-wrap: break-word;
        margin: 0 auto;
    }

    .hero-heading {
        font-family: 'Crimson Text', serif;
        font-weight: 400;
        font-size: var(--font-size-h1);
        line-height: 1.3;
                color: #D2AC67;
    }

    .hero-subtext {
        font-family: 'Crimson Text', serif;
        font-weight: 400;
        line-height: 1.3;
    }
</style>
