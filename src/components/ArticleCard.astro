---
interface Props {
	image: string;
	title: string;
	url: string;
}

const { image, title, url } = Astro.props;
---

<a href={url} class="article-card-link">
	<div class="article-card">
		<img src={image} alt={title} />
		<p>{title}</p>
	</div>
</a>

<style>
	.article-card-link {
		text-decoration: none;
	}

	.article-card {
		background-color: rgba(219, 219, 219, 0.56);
		border-radius: 0.625em;
		box-shadow: 0.5em 0.625em 0.25em 0em rgba(0, 0, 0, 0.25);
		width: 22.30632421875em;
		height: 21.7343671875em;
	}

	.article-card img {
		width: 100%;
		height: 14.775556640625em;
		border-top-left-radius: 0.625em;
		border-top-right-radius: 0.625em;
	}

	.article-card p {
		font-family: "Crimson Text", serif;
		font-weight: 400;
		font-size: var(--font-size-p);
		line-height: 1.3;
		text-align: center;
		color: #000;
		padding: 0.762609375em;
	}
</style>
