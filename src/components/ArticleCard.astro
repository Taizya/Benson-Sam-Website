---
interface Props {
	image: string;
	title: string;
}

const { image, title } = Astro.props;
---

<div class="article-card">
	<img src={image} alt={title} />
	<p>{title}</p>
</div>

<style>
	.article-card {
		background-color: rgba(219, 219, 219, 0.56);
		border-radius: 10px;
		box-shadow: 8px 10px 4px 0px rgba(0, 0, 0, 0.25);
		width: 468px;
		height: 456px;
	}

	.article-card img {
		width: 100%;
		height: 310px;
		border-top-left-radius: 10px;
		border-top-right-radius: 10px;
	}

	.article-card p {
		font-family: "Crimson Text", serif;
		font-weight: 400;
		
		line-height: 1.3;
		text-align: center;
		color: #000;
		padding: 1rem;
	}
</style>
