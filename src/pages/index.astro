---
import '../styles/home.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroLayout from '../layouts/HeroLayout.astro';
import ImageBackgroundSection from '../layouts/ImageBackgroundSection.astro';
import PracticeArea from '../components/PracticeArea.astro';
import CardsLayout from '../layouts/CardsLayout.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import ArticleCard from '../components/ArticleCard.astro';
import Footer from '../components/Footer.astro';
import GlassEffect from '../components/GlassEffect.astro';
import WhiteSection from '../layouts/WhiteSection.astro';
import BlackSection from '../layouts/BlackSection.astro';
---

<BaseLayout>
   <HeroLayout 
   image="/assets/images/HeroImage.jpg"
      title="Benson&Sam Advocates"
      text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod  tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim  veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea  commodo consequat. Duis aute irure dolor. Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ipsa non ab cupiditate id ducimus. Error repellat molestiae exercitationem impedit vel nostrum natus atque ullam incidunt assumenda maxime, neque labore unde."
   />
	<WhiteSection>
      <div class="expert-guidance-section">
         <div class="expert-guidance-intro-image">
            <img
               src="/assets/images/AboutUsImage.jpg"
               alt="The Thinker statue"
            />
         </div>
         <div class="intro">
            <GlassEffect
               heading="Expert legal guidance, delivered with integrity and efficiency"
               paragraph="eritatis et quasi architecto beatae vitae dicta sunt explicabo. A well-drafted surrogacy agreement is one of the most important tools for protecting both the intended parents and the surrogate. Acting, or legal representation anywhere."
            />
         </div>
      </div>
	</WhiteSection>

   <ImageBackgroundSection image="ValuePropositionImage.jpg">
      <div class="value-proposition">
         <h2>Why Choose Us?</h2>
         <div class="reasons">
           <div class="reason">
             <h4>Proven Legal Expertise</h4>
             <p>
               Lorem ipsum dolor sit amet, consectetur adipiscing elit.
               Sed do eiusmod tempor incididunt ut labore et dolore magna
               aliqua
             </p>
           </div>
           <div class="reason">
             <h4>Transparent & Strategic</h4>
             <p>
               Lorem ipsum dolor sit amet, consectetur adipiscing elit.
               Sed do eiusmod tempor incididunt ut labore et dolore magna
               aliqua.
             </p>
           </div>
         </div>
      </div>
   </ImageBackgroundSection>

	<WhiteSection class="areas-of-practice-section">
      <div class="content-wrapper">
         <h2>Areas of Practice</h2>
         <div class="areas">
            <div class="practice-areas-grid">
               <PracticeArea image="/assets/images/ContractDrafting.svg" title="Contract Drafting" url="/area" />
               <PracticeArea image="/assets/images/Consulting.svg" title="Consulting" url="/area" />
               <PracticeArea image="/assets/images/EstatePlanning.svg" title="Estate Planning" url="/area" />
            </div>
         </div>
      </div>

	</WhiteSection>

	<BlackSection>
		<div class="our-team-layout">
			<h2>Our Team</h2>
         <CardsLayout>
            <Card name="Sam Mujuda" position="Co-Founder" image="/assets/images/TeamMember1.jpg" />
            <Card name="Full Name" position="Position" />
            <Card name="Full Name" position="Position" />
         </CardsLayout>
			<Button className="gold"/>
		</div>
	</BlackSection>

	<WhiteSection>
		<div class="our-insights-layout">
			<h2>Our Insights</h2>
         <div class="article-row">
           <ArticleCard
             title="The Importance of Estate Planning"
             image="/assets/images/Insight1.jpg"
             url="/article"
           />
           <ArticleCard
             title="Navigating Corporate Law"
             image="/assets/images/Insight2.jpg"
             url="/article"
           />
         </div>
			<div style="position: relative; top: 1.5em;">
				<Button className="black" />
			</div>
		</div>
	</WhiteSection>

	<ImageBackgroundSection image="CallToActionImage.jpg">
		<div class="legal-content">
			<h2>Need Legal Support You Can Trust?</h2>
			<p>
				Whether you're facing a complex legal challenge or simply need
				expert guidance, our experienced attorneys are here to help.
			</p>
			<span>Schedule your consultation today.</span>
			<Button className="gold" text="Contact Us"/>
		</div>
	</ImageBackgroundSection>

	<Footer />

</BaseLayout>
<style>
   .expert-guidance-section {
      display: flex;
      align-items: center;
      max-width: 42.1875em;
      margin: 0 auto;
      transform: translateX(-3.25em); /* Adjusted for image on left */
   }

   .expert-guidance-intro-image img {
      width: 22.5em;
      height: 32.3125em;
      border-radius: calc(var(--border-radius) * 0.75);
      object-fit: cover;
      box-shadow: 0em 0.375em 0.28125em 0.09375em rgba(0, 0, 0, 0.25);
   }
   .expert-guidance-section > :last-child {
      margin-left: -3.14046875em; /* Adjusted for image on left and shifted right by 8em */
      z-index: 2;
      position: relative;
   }

   .areas-of-practice-content h2 {
      font-family: "Crimson Text", serif;
      font-weight: 600;
      font-size: var(--font-size-h2);
      line-height: 1.3;
      color: var(--text-dark);
      margin-bottom: calc(var(--spacing-lg) * 0.75);
   }

   .practice-areas-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2.25em;
      max-width: 48.9375em;
      margin: 0 auto;
   }
</style>
