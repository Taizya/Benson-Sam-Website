---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroLayout from "../layouts/HeroLayout.astro";
import WhiteSection from "../layouts/WhiteSection.astro";
import ImageBackgroundSection from "../layouts/ImageBackgroundSection.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout>
  <HeroLayout
    image="/assets/images/contactImage.jpg"
    title="Get In Touch"
    text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut dolor"
  />
  <WhiteSection>
    <div class="contact_us-section">
      <div class="contact-us-left">
        <h2>Let's Connect</h2>
        <p>
          Have a question or a legal challenge? We're here to listen.
          Fill out the form, and our dedicated team will get back to you promptly.
          Your legal peace of mind is our priority.
        </p>
        <div class="contact-details">
          <p><strong>Phone:</strong> (123) 456-7890</p>
          <p><strong>Email:</strong> contact@bensonandsam.com</p>
          <p><strong>Address:</strong> 123 Law Firm Street, Suite 456, City, State, 12345</p>
        </div>
        <div class="business-hours">
          <h3>Business Hours</h3>
          <p>Monday - Friday: 9:00 AM - 5:00 PM</p>
          <p>Saturday - Sunday: Closed</p>
        </div>
      </div>
      <div class="contact-form">
        <div class="glass-div">
          <form action="">
            <div class="full-names">
              <input
                type="text"
                id="fname"
                name="fname"
                placeholder="First Name"
              />
              <input
                type="text"
                id="lname"
                name="lname"
                placeholder="Last Name"
              />
            </div>
            <div class="form-field">
              <input type="tel" id="phone" name="phone" placeholder="Phone" />
            </div>
            <div class="form-field">
              <input
                type="email"
                id="mail"
                name="mail"
                placeholder="example@mail.com"
              />
            </div>
            <div class="form-field">
              <textarea
                id="message"
                name="message"
                rows="4"
                placeholder="Message"></textarea>
            </div>
            <button type="submit" class="button">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </WhiteSection>

  <ImageBackgroundSection image="location.jpg">
    <div class="find-us">
      <div class="map-placeholder">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2483.325363433838!2d-0.1277583844638783!3d51.50735097963522!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487604ce3da4233d%3A0x2355a7633513388!2sBig%20Ben!5e0!3m2!1sen!2suk!4v1629838909629!5m2!1sen!2suk"
          width="600"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"></iframe>
      </div>
      <div class="find-us-right">
        <h2>Visit Our Office</h2>
        <p>
          Our office is located at the heart of the city, easily accessible for all our clients. We recommend scheduling an appointment to ensure our team can provide you with the best possible service.
        </p>
      </div>
    </div>
  </ImageBackgroundSection>

  <Footer />
</BaseLayout>

<style>
  .contact_us-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2em;
    align-items: center;
    justify-content: center;
    max-width: 60em;
    margin: 0 auto;
    padding: 4em 1em;
  }

  .contact-us-left {
    text-align: left;
  }

  .contact-details p,
  .business-hours p {
    margin-bottom: 0.5em;
  }

  .business-hours h3 {
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .glass-div {
    background: rgba(255, 255, 255, 0.65);
    padding: 1.875em;
    border-radius: 0.46875em;
    max-width: 25.515625em;
    box-shadow: 0em 0.375em 0.28125em 0.09375em rgba(0, 0, 0, 0.25);
    z-index: 2;
    position: relative;
    color: #000;
    text-align: left;
  }

  .full-names {
    display: flex;
    gap: 1em;
    margin-bottom: 1.5em;
  }

  .form-field {
    margin-bottom: 1.5em;
  }

  input,
  textarea {
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #000;
    width: 100%;
    padding: 0.5em 0;
    font-size: 1em;
    color: #000;
  }

  input:focus,
  textarea:focus {
    outline: none;
  }

  input::placeholder,
  textarea::placeholder {
    color: lightgrey;
  }

  .find-us {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2em;
    align-items: center;
    color: #fff;
    max-width: 60em;
    margin: 0 auto;
    padding: 4em 1em;
  }

  .find-us-right {
    text-align: left;
  }

  .office-details p {
    margin-bottom: 0.5em;
  }

  .map-placeholder iframe {
    width: 100%;
    height: 25em;
    border-radius: 0.5em;
  }
</style>
